<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<EditText android:id="@+id/event_title_text" android:layout_gravity="top|center"
			android:hint="@string/event_title_hint" android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:lines="1"/>
	<EditText android:id="@+id/event_where_text" android:layout_gravity="center"
			android:hint="@string/event_where_hint" android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:lines="1"/>
	<EditText android:id="@+id/event_description_text" android:layout_gravity="center"
			android:hint="@string/event_description_hint" android:gravity="top"
		  android:layout_width="fill_parent" android:layout_height="fill_parent"
		  android:layout_weight="1"/>
	<CheckBox android:id="@+id/send_event_notifications_checkbox" android:layout_gravity="left"
			android:text="@string/send_event_notifications_label"
			android:layout_width="fill_parent" android:layout_height="wrap_content"/>
  <Button android:id="@+id/save_event_button" android:layout_gravity="bottom|center"
      android:text="@string/save_event_button" android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
</LinearLayout>
